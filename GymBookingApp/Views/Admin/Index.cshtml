@model IEnumerable<bookingadmintest.Models.Workout>

@{
    ViewData["Title"] = "Träningspass";
}

<h1 class="text-center mb-5">Träningspass</h1>

<div class="text-center mt-5">
    <p>
        <a class="btn btn-success" asp-action="Create">Lägg till nytt pass</a>
    </p>
</div>

    @foreach (var item in Model)
    {

        <div class="card p-3 mb-3 mt-5 text-center" style="max-width: 800px;">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.WorkoutName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WorkoutDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Instructor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Duration)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cost)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkoutName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkoutDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Instructor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Duration) min
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cost) :-
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity) st
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center">
                <a class="p-1 mx-3 btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Ändra</a>
                <a class="p-1 mx-3 btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Detaljer</a>
                <a class="p-1 mx-3 btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Radera</a>
            </div>
        </div>
    }
