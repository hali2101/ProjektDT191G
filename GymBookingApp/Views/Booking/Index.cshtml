@model IEnumerable<bookingadmintest.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-5 mt-5">Bokningar Admin</h1>


<div class="text-center mb-5">
    <p>
        <a class="btn btn-success" asp-action="Create">Lägg till bokning</a>
    </p>
</div>

@foreach (var item in Model)
{
    <div class="card p-3 mb-3 text-center" style="max-width: 800px;">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phonenumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BookingDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Workout)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phonenumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Workout.WorkoutName)
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a class="p-1 mx-3 btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Ändra</a>
            <a class="p-1 mx-3 btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Detaljer</a>
            <a class="p-1 mx-3 btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Radera</a>
        </div>
    </div>
}
